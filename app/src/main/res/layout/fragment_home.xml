<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.example.obi.proyekakhir._sliders.SliderView
                        android:id="@+id/sliderView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bg_indicator" />

                <LinearLayout
                    android:id="@+id/pagesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="210dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="50dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/menu1"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageview"
                                android:padding="5dp"
                                app:srcCompat="@drawable/ic_insert_photo_white_24dp"
                                android:background="@drawable/bg_green"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/imageview"
                                android:text="Wisata"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/menu3"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageview2"
                                android:padding="5dp"
                                android:src="@drawable/ic_explore_white_24dp"
                                android:background="@drawable/bg_skyblue"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/imageview2"
                                android:text="Explorer"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/menu5"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageview3"
                                android:padding="5dp"
                                android:src="@drawable/ic_favorite_white_24dp"
                                android:background="@drawable/bg_pink"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/imageview3"
                                android:text="Favorit"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/menu2"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageview1"
                                android:padding="5dp"
                                android:src="@drawable/ic_monetization_on_white_24dp"
                                android:background="@drawable/bg_yellow"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/imageview1"
                                android:text="Holiday Budget"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/menu4"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageview4"
                                android:padding="5dp"
                                android:src="@drawable/ic_map_white_24dp"
                                android:background="@drawable/bg_violet"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/imageview4"
                                android:text="Map"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/menu6"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageview5"
                                android:padding="5dp"
                                android:src="@drawable/ic_info_white"
                                android:background="@drawable/bg_red"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/imageview5"
                                android:text="About"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>